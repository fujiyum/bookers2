 <div class="container px-5">
   <div class="row">
    <div class="col-3">
     <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <table class="table">
       <tbody>
         <tr></tr>
         <tr><th>name</th> <th><%= current_user.name%></th></tr>
         <tr><th>introduction</th> <th><%= current_user.introduction%></th></tr>
       </tbody>
     </table>
     <div class="row">
       <button type="button" class="btn btn-outline-secondary btn-block">
        <%= link_to edit_user_path(current_user.id), class:'nav-link text-dark' do %>
          <strong><i class="fas fa-user-cog"></i></strong>
        <% end %>
       </button>
     </div>
     <h2>New book</h2>
      <%= form_with model: @book, local:true do |f| %>
     <h4>Title</h4>
       <%= f.text_field :title %>
     <h4>Opinion</h4>
       <%= f.text_field :body %>
       <%= f.submit 'Create Book' %>
     <% end %>
     </div>
    <div class=col-9>
      <h2>Books</h2>
       <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
         <% @users.each do |user| %>
          <tr>
           <td><%= attachment_image_tag user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg", size:'40x40' %></td>
           <td><%= user.name %></td>
           <td>Show</td>

          </tr>
         <% end %>
        </tbody>
       </table>
     </div>
  </div>
 </div>