<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 mx-auto px-5 px-sm-0 mt-3">
   <h2>User info</h2>
     <div class="error_message">
      <% if @user.errors.any? %>
       <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
       <ul>
         <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
       </ul>
      <% end %>
     </div>
    <%= form_with model:@user, local:true do |f| %>
    <div class="form-group mt-2">
    <label for="inputName">Name</label>
    <div><%= f.text_field :name, class:'form-control'%></div>
    </div>
    <div class="form-group mt-2">
    <label for="inputImage">Image</label>
    <div><%= f.attachment_field :profile_image %></div>
    </div>
    <div class="form-group mt-2">
    <label for="introduction">Introduction</label>
    <div><%= f.text_area :introduction, class:'form-control' %></div>
    </div>
    <div class="form-group mt-2">
    <%= f.submit 'Update User', class:'btn btn-secondary' %>
    </div>
    <% end %>
  </div>
 </div>
</div>
