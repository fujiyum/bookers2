<div class="col-3">
     <h2>User info</h2>
      <%= attachment_image_tag users, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <table class="table">
       <tbody>
         <tr></tr>
         <tr><th>name</th> <th><%= users.name %></th></tr>
         <tr><th>introduction</th> <th><%= users.introduction %></th></tr>
       </tbody>
     </table>
     <div class="row">
       <button type="button" class="btn btn-outline-secondary btn-block">
        <%= link_to edit_user_path(user.id), class:'nav-link text-dark' do %>
          <strong><i class="fas fa-user-cog"></i></strong>
        <% end %>
       </button>
     </div>
     <h2>New book</h2>
      <%= form_with model: @book, local:true do |f| %>
     <h4>Title</h4>
       <%= f.text_field :title %>
     <h4>Opinion</h4>
       <%= f.text_field :body %>
       <%= f.submit 'Create Book' %>
     <% end %>
    </div>
</di>