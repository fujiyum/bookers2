<div class="col-md-3 px-5 px-sm-0">
 <h2>User info</h2>
 <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
 <table class="table">
  <tbody>
   <tr></tr>
   <tr><th>name</th> <th><%= user.name %></th></tr>
   <tr><th>introduction</th> <th><%= user.introduction %></th></tr>
   </tbody>
  </table>

  <div class="row">
   <div class="col-12 px-5 px-sm-0">
    <% if user.id == current_user.id %>
     <%= link_to edit_user_path(user), class:'text-dark' do %>
      <button class="btn btn-outline-secondary btn-block fas fa-user-cog"></button>
     <% end %>
    <% else %>
     <%= link_to user_path(current_user), class:'text-dark' do %>
      <button class="btn btn-outline-secondary btn-block fas fa-user-cog"></button>
     <% end %>
    <% end %>
   </div>
  </div>

 <h2 class="mt-3">New book</h2>
 <%= form_with model: book, url:'/books', local:true do |f| %>
   <div class="form-group">
    <label for="inputtitle">Title</label>
    <div><%= f.text_field :title, class:'form-control' %></div>
   </div>
   <div class="form-group">
    <label class="inputbody">Opinion</label>
    <div><%= f.text_area :body, class:'form-control' %></div>
   </div>
   <div class="form-group">
    <div><%= f.submit 'Create Book', class:'btn btn-success' %></div>
   </div>
 <% end %>
</div>