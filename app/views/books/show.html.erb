<div class="Notification">
  <% flash.each do |key, value| %>
  <%= content_tag :div, value, class: key %>
  <% end %>
</div>

<div class="container px-5 px-sm-0 mt-3">
   <div class="row">

     <%= render 'books/list', book: @book_new, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
       <table class="table table-hover table-inverse">

        <tbody>
          <tr>
            <td>
            <%= link_to user_path(@user.id) do %>
             <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'40x40' %>
             <div>
             <%= @user.name %>
             </div>
             <% end %>
            </td>
            <td>
             <%= link_to book_path(@book.id) do %>
             <%= @book.title %>
             <% end %>
            </td>
            <td><%= @book.body %></td>
           <% if @book.user == current_user %>
            <td>
             <%= link_to edit_book_path(@book) do %>
              <button type="button" class="btn btn-success btn-sm">Edit</button>
             <% end %>
            </td>
            <td>
             <%= link_to book_path(@book), method: :delete, data: {confirm: "本当に削除しますか？"} do %>
              <button type="button" class="btn btn-danger btn-sm">Destroy</button>
             <% end %>
            </td>
           <% end %>
          </tr>
        </tbody>
       </table>
    </div>
  </div>
 </div>