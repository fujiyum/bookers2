<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto mt-3">
     <h1>Editing Book</h1>
      <div class="error_message">
       <% if @book.errors.any? %>
       <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
         <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
       <% end %>
      </div>
      <%= form_with model:@book, local:true do |f| %>
       <div class="from-group mt-2">
        <label for="input-title">Title</label>
        <div><%= f.text_field :title, class:'form-control' %></div>
       </div>
       <div class="from-group mt-3">
        <label for="input-body">Opinion</label>
        <div><%= f.text_area :body, class:'form-control' %></div>
       </div>
       <div class="form-group mt-3">
       <%= f.submit 'Update Book', class:'btn btn-success' %>
       </div>
       <% end %>
       <div>
        <%= link_to "Show", user_path(current_user.id) %>
        |
        <%= link_to "back", books_path %>
       </div>
    </div>
  </div>
</div>